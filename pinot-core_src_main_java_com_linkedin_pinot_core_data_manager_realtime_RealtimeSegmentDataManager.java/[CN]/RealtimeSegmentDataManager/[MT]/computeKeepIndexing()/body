{
  if (!keepIndexing) {
    return;
  }
  logger.info("Current indexed " + ((RealtimeSegmentImpl)realtimeSegment).getRawDocumentCount() + " raw events, success = "+ ((RealtimeSegmentImpl)realtimeSegment).getSuccessIndexedCount()+ " docs, total = "+ ((RealtimeSegmentImpl)realtimeSegment).getTotalDocs()+ " docs in realtime segment");
  if ((System.currentTimeMillis() >= segmentEndTimeThreshold) || ((RealtimeSegmentImpl)realtimeSegment).getRawDocumentCount() >= numIndexedEventsToStopIndexing) {
    logger.info("Stopped indexing due to reaching segment limit: " + ((RealtimeSegmentImpl)realtimeSegment).getRawDocumentCount() + " raw documents indexed, segment is aged "+ ((System.currentTimeMillis() - start) / (ONE_MINUTE_IN_MILLSEC))+ " minutes");
    keepIndexing=false;
  }
}
