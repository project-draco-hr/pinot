{
  init(rows,cols,columnSizesInBits,signed);
  file=new RandomAccessFile(dataFile,"rw");
  this.isMmap=isMmap;
  if (isMmap) {
    byteBuffer=MmapUtils.mmapFile(file,FileChannel.MapMode.READ_ONLY,0,totalSizeInBytes,dataFile,this.getClass().getSimpleName() + " byteBuffer");
  }
 else {
    byteBuffer=MmapUtils.allocateDirectByteBuffer(totalSizeInBytes,dataFile,this.getClass().getSimpleName() + " byteBuffer");
    file.getChannel().read(byteBuffer);
    file.close();
  }
  ownsByteBuffer=true;
  customBitSet=CustomBitSet.withByteBuffer(totalSizeInBytes,byteBuffer);
}
