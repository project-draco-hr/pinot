{
  File file=new File("test_single_col_writer.dat");
  file.delete();
  int rows=100;
  int cols=1;
  int[] columnSizes=new int[]{4};
  FixedByteWidthRowColDataFileWriter writer=new FixedByteWidthRowColDataFileWriter(file,rows,cols,columnSizes);
  int[] data=new int[rows];
  Random r=new Random();
  for (int i=0; i < rows; i++) {
    data[i]=r.nextInt();
    writer.setInt(i,0,data[i]);
  }
  writer.saveAndClose();
  DataInputStream dis=new DataInputStream(new FileInputStream(file));
  for (int i=0; i < rows; i++) {
    Assert.assertEquals(dis.readInt(),data[i]);
  }
  dis.close();
  file.delete();
}
