{
  when(helix.getInstanceToSegmentsInATableMap(anyString())).thenAnswer(new Answer<Object>(){
    @Override public Object answer(    InvocationOnMock invocationOnMock) throws Throwable {
      return subsetOfServerSegments(servers);
    }
