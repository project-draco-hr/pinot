{
  File file=new File("test_single_col_writer.dat");
  file.delete();
  int rows=100;
  int cols=2;
  int[] columnSizes=new int[]{4,4};
  FixedByteWidthRowColDataFileWriter writer=new FixedByteWidthRowColDataFileWriter(file,rows,cols,columnSizes);
  int[][] data=new int[rows][cols];
  Random r=new Random();
  for (int i=0; i < rows; i++) {
    for (int j=0; j < cols; j++) {
      data[i][j]=r.nextInt();
      writer.setInt(i,j,data[i][j]);
    }
  }
  writer.close();
  DataInputStream dis=new DataInputStream(new FileInputStream(file));
  for (int i=0; i < rows; i++) {
    for (int j=0; j < cols; j++) {
      Assert.assertEquals(dis.readInt(),data[i][j]);
    }
  }
  dis.close();
  file.delete();
}
