{
  context.getCounter(AggregationCounter.NUMBER_OF_RECORDS_FLATTENED).increment(numRecordsFlattened);
  if (isDumpStatistics) {
    FSDataOutputStream dimensionStatsOutputStream=fileSystem.create(new Path(dimensionStatsOutputDir + "/" + context.getTaskAttemptID()+ ".stat"));
    OBJECT_MAPPER.writeValue(dimensionStatsOutputStream,dimensionStats);
    dimensionStatsOutputStream.close();
    FSDataOutputStream outputStream=fileSystem.create(new Path(statOutputDir + "/" + context.getTaskAttemptID()+ ".stat"));
    outputStream.write(aggregationStats.toString().getBytes());
    outputStream.close();
  }
}
