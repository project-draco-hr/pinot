{
  final List<HelixServerStarter> pinotHelixStarters=new ArrayList<HelixServerStarter>();
  for (int i=0; i < numInstances; ++i) {
    final HelixServerStarter pinotHelixStarter=new HelixServerStarter(HELIX_CLUSTER_NAME,ZkTestUtils.DEFAULT_ZK_STR,new PropertiesConfiguration());
    pinotHelixStarters.add(pinotHelixStarter);
    Thread.sleep(1000);
  }
  return pinotHelixStarters;
}
