{
  for (int i=0; i < numInstances; ++i) {
    final String brokerId="Broker_localhost_" + i;
    final HelixManager helixManager=HelixManagerFactory.getZKHelixManager(helixClusterName,brokerId,InstanceType.PARTICIPANT,zkServer);
    helixManager.connect();
    helixManager.getClusterManagmentTool().addInstanceTag(helixClusterName,brokerId,CommonConstants.Helix.UNTAGGED_BROKER_INSTANCE);
    Thread.sleep(1000);
  }
}
