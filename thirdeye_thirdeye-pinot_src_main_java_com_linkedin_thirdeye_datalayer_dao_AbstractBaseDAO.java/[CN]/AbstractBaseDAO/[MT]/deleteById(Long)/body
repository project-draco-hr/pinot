{
  return runTask(new QueryTask<Integer>(){
    @Override public Integer handle(    Connection connection) throws Exception {
      Map<String,Object> filters=new HashMap<>();
      filters.put("id",id);
      PreparedStatement deleteStatement=sqlQueryBuilder.createDeleteByIdStatement(connection,entityClass,filters);
      return deleteStatement.executeUpdate();
    }
  }
,0);
}
