{
  FileSystem fileSystem=null;
  try {
    Configuration conf=new Configuration();
    fileSystem=FileSystem.get(conf);
    Path indexPath=new Path(rootDir,nodeId.toString() + INDEX_SUFFIX);
    Map<String,Map<String,Integer>> forwardIndex=OBJECT_MAPPER.readValue(fileSystem.open(indexPath),TYPE_REFERENCE);
    Path bufferPath=new Path(rootDir,nodeId.toString() + BUFFER_SUFFIX);
    return new StarTreeRecordStoreCircularBufferHdfsImpl(nodeId,bufferPath,conf,dimensionNames,metricNames,forwardIndex,numTimeBuckets);
  }
 catch (  Exception e) {
    throw new IllegalStateException(e);
  }
 finally {
    if (fileSystem != null) {
      try {
        fileSystem.close();
      }
 catch (      Exception e) {
        throw new IllegalStateException(e);
      }
    }
  }
}
