{
  Properties config=new Properties();
  config.setProperty(ReplacementPhaseConstants.REPLACEMENT_PHASE_INPUT_SCHEMA_PATH.toString(),getSchemaPath(root,collection));
  config.setProperty(ReplacementPhaseConstants.REPLACEMENT_PHASE_INPUT_PATH.toString(),inputPaths);
  config.setProperty(ReplacementPhaseConstants.REPLACEMENT_PHASE_OUTPUT_SCHEMA_PATH.toString(),getIndexDir(root,collection,minTime,maxTime));
  config.setProperty(ReplacementPhaseConstants.REPLACEMENT_PHASE_OUTPUT_PATH.toString(),getIndexDir(root,collection,minTime,maxTime) + File.separator + REPLACEMENT.getName());
  config.setProperty(ReplacementPhaseConstants.REPLACEMENT_PHASE_TOPK_PATH.toString(),getIndexDir(root,collection,minTime,maxTime) + File.separator + TOPK.getName()+ File.separator+ TOPK_VALUES_FILE);
  return config;
}
