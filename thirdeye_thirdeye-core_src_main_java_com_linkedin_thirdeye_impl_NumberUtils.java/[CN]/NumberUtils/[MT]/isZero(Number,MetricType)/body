{
switch (type) {
case SHORT:
    return value.shortValue() == 0;
case INT:
  return value.intValue() == 0;
case LONG:
return value.longValue() == 0L;
case FLOAT:
return value.floatValue() == 0.0;
case DOUBLE:
return value.doubleValue() == 0.0;
}
throw new IllegalArgumentException("Invalid type " + type);
}
