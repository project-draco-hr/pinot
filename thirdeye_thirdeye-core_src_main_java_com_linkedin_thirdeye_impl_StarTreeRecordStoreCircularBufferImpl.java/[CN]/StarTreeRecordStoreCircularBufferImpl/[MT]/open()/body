{
synchronized (sync) {
    if (!isOpen) {
      isOpen=true;
      FileChannel fileChannel=new RandomAccessFile(file,"rw").getChannel();
      buffer=fileChannel.map(FileChannel.MapMode.READ_WRITE,0,file.length());
      buffer.order(ByteOrder.BIG_ENDIAN);
      checkBuffer();
      LOG.info("Opened record store {}",nodeId);
    }
  }
}
