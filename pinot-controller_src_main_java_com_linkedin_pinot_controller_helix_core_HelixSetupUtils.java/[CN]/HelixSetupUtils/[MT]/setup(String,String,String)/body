{
  try {
    createHelixClusterIfNeeded(helixClusterName,zkPath);
  }
 catch (  final Exception e) {
    LOGGER.error("Caught exception",e);
    return null;
  }
  try {
    return startHelixControllerInStandadloneMode(helixClusterName,zkPath,pinotControllerInstanceId);
  }
 catch (  final Exception e) {
    LOGGER.error("Caught exception",e);
    return null;
  }
}
